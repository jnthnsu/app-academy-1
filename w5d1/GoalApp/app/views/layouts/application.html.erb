<!DOCTYPE html>
<html>
<head>
  <title>GoalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <%= link_to "Sign Out", new_session_url, method: :delete %>
    Cheers: <%= current_user.cheers %>
    <%= "Logged in as " + current_user.username %>
  <% else %>
    <%= link_to "Not a user? Sign Up", new_user_url %>
    <%= link_to "Already a user? Sign In", new_session_url %>
  <% end %>

  <% if flash.to_hash.slice('errors', 'notice') %>
    <% flash.to_hash.slice('errors', 'notice').values.flatten.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
